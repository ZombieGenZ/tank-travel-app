<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        xmlns:local="clr-namespace:TiketManagementV2.View"
        xmlns:Controls="clr-namespace:TiketManagementV2.Controls" x:Class="TiketManagementV2.View.AddVehicleView"
        mc:Ignorable="d"
        Title="AddVehicleView" Height="750" Width="500"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        MouseDown="Window_MouseDown">
    <Border CornerRadius="10">
        <Border CornerRadius="10"
                BorderThickness="1">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="{StaticResource winBorderColor1}" Offset="0"/>
                    <GradientStop Color="{StaticResource winBorderColor2}" Offset="0.75"/>
                    <GradientStop Color="{StaticResource winBorderColor3}" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="{StaticResource primaryBackColor1}" Offset="0"/>
                    <GradientStop Color="{StaticResource primaryBackColor2}" Offset="0.75"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0*"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="25"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid Grid.ColumnSpan="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="5"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Add Vehicle"
                     Foreground="DarkGray"
                     FontSize="10"
                     FontFamily="Monsterrat"
                     Grid.Column="0"
                     VerticalAlignment="Center"
                     Margin="10,0,0,0"/>

                    <Button x:Name="btnClose"                          
                    BorderThickness="0"
                    Content="X"
                    Foreground="White"
                    FontSize="12"
                    FontFamily="Montserrat"
                    Cursor="Hand"
                    Grid.Column="1"
                    Click="btnClose_Click">
                        <Button.Style>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Background" Value="#DA34AE"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#C62DAE"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Width="18" Height="18"
                                CornerRadius="9"
                                Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                            HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto"
                            Style="{StaticResource CustomScrollViewerStyle}" Grid.ColumnSpan="2">
                    <StackPanel Width="380"
                            Orientation="Vertical"
                            Margin="0,20,0,20">

                        <TextBlock Text="Vehicle Type"
                         Foreground="DarkGray"
                         FontSize="12"
                         FontWeight="Medium"
                         FontFamily="Montserrat"                             
                         Margin="0,15,0,0"/>
                        <ComboBox x:Name="cmbVehicle"
                                  Style="{StaticResource CustomComboBoxStyle}"
                                  Margin="0,5,0,0"
                                  Padding="20,0,0,0"
                                  ItemsSource="{Binding VehicleTypes}"
                                  Background="#353340">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Name}" 
                                               Foreground="White"
                                               FontSize="13"
                                               FontFamily="Montserrat"
                                               Padding="5"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                            <ComboBox.ItemContainerStyle>
                                <Style TargetType="{x:Type ComboBoxItem}" BasedOn="{StaticResource CustomComboBoxItemStyle}"/>
                            </ComboBox.ItemContainerStyle>
                        </ComboBox>

                        <TextBlock Text="Seat Type"
                                   Foreground="DarkGray"
                                   FontSize="12"
                                   FontWeight="Medium"
                                   FontFamily="Montserrat"                             
                                   Margin="0,15,0,0"/>
                        <ComboBox x:Name="cmbSeatType"
                                  Style="{StaticResource CustomComboBoxStyle}"
                                  Margin="0,5,0,0"
                                  Padding="20,0,0,0"
                                  ItemsSource="{Binding SeatTypes}" Background="#353340">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Name}" 
                                               Foreground="White"
                                               FontSize="13"
                                               FontFamily="Montserrat"
                                               Padding="5"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                            <ComboBox.ItemContainerStyle>
                                <Style TargetType="{x:Type ComboBoxItem}" BasedOn="{StaticResource CustomComboBoxItemStyle}"/>
                            </ComboBox.ItemContainerStyle>
                        </ComboBox>

                        <TextBlock Text="Rules"
                         Foreground="DarkGray"
                         FontSize="12"
                         FontWeight="Medium"
                         FontFamily="Montserrat"                             
                         Margin="0,15,0,0"/>
                        <TextBox x:Name="txtRules"
                        FontSize="13"
                        FontWeight="Medium"
                        FontFamily="Montserrat"                            
                        Foreground="White"
                        CaretBrush="LightGray"
                        BorderBrush="DarkGray"
                        BorderThickness="0,0,0,2"
                        Height="28"
                        VerticalContentAlignment="Center"
                        Margin="0,5,0,0"
                        Padding="20,0,0,0">
                            <TextBox.Background>
                                <ImageBrush Stretch="None"
                                    AlignmentX="Left"/>
                            </TextBox.Background>
                        </TextBox>

                        <TextBlock Text="Seats"
                                   Foreground="DarkGray"
                                   FontSize="12"
                                   FontWeight="Medium"
                                   FontFamily="Montserrat"                             
                                   Margin="0,15,0,0"/>
                        <TextBox x:Name="txtSeats"
                                 FontSize="13"
                                 FontWeight="Medium"
                                 FontFamily="Montserrat"                            
                                 Foreground="White"
                                 CaretBrush="LightGray"
                                 BorderBrush="DarkGray"
                                 BorderThickness="0,0,0,2"
                                 Height="28"
                                 VerticalContentAlignment="Center"
                                 Margin="0,5,0,0"
                                 Padding="20,0,0,0">
                            <TextBox.Background>
                                <ImageBrush Stretch="None"
                                    AlignmentX="Left"/>
                            </TextBox.Background>
                        </TextBox>

                        <TextBlock Text="Amenities"
                         Foreground="DarkGray"
                         FontSize="12"
                         FontWeight="Medium"
                         FontFamily="Montserrat"                             
                         Margin="0,15,0,0"/>
                        <TextBox x:Name="txtAmenities"
                        FontSize="13"
                        FontWeight="Medium"
                        FontFamily="Montserrat"                            
                        Foreground="White"
                        CaretBrush="LightGray"
                        BorderBrush="DarkGray"
                        BorderThickness="0,0,0,2"
                        Height="28"
                        VerticalContentAlignment="Center"
                        Margin="0,5,0,0"
                        Padding="20,0,0,0">
                            <TextBox.Background>
                                <ImageBrush Stretch="None"
                                    AlignmentX="Left"/>
                            </TextBox.Background>
                        </TextBox>

                        <TextBlock Text="License Plate"
                         Foreground="DarkGray"
                         FontSize="12"
                         FontWeight="Medium"
                         FontFamily="Montserrat"                             
                         Margin="0,15,0,0"/>
                        <TextBox x:Name="txtLicensePlate"
                        FontSize="13"
                        FontWeight="Medium"
                        FontFamily="Montserrat"                            
                        Foreground="White"
                        CaretBrush="LightGray"
                        BorderBrush="DarkGray"
                        BorderThickness="0,0,0,2"
                        Height="28"
                        VerticalContentAlignment="Center"
                        Margin="0,5,0,0"
                        Padding="20,0,0,0">
                            <TextBox.Background>
                                <ImageBrush Stretch="None"
                                    AlignmentX="Left"/>
                            </TextBox.Background>
                        </TextBox>

                        <TextBlock Text="Images"
                         Foreground="DarkGray"
                         FontSize="12"
                         FontWeight="Medium"
                         FontFamily="Montserrat"                             
                         Margin="0,15,0,5"/>

                        <!-- Drag and Drop Area -->
                        <Border x:Name="dragDropArea" 
                                Width="380" 
                                Height="150" 
                                Background="Transparent"
                                BorderBrush="DarkGray" 
                                BorderThickness="2" 
                                CornerRadius="5"
                                Margin="0,5,0,10"
                                AllowDrop="True"
                                Drop="dragDropArea_Drop"
                                DragEnter="dragDropArea_DragEnter"
                                DragLeave="dragDropArea_DragLeave">
                            <Grid>
                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <Path Data="M12,4V20H4V4H12M12,2H4A2,2 0 0,0 2,4V20A2,2 0 0,0 4,22H12A2,2 0 0,0 14,20V4A2,2 0 0,0 12,2M20,11H16V5H20M20,15V18H16V15H20M20,3H16A2,2 0 0,0 14,5V18A2,2 0 0,0 16,20H20A2,2 0 0,0 22,18V5A2,2 0 0,0 20,3Z" 
                                          Fill="DarkGray" 
                                          Width="40" 
                                          Height="40"
                                          Stretch="Uniform"/>
                                    <TextBlock Text="Drop files to upload" 
                                               Foreground="DarkGray" 
                                               FontSize="14" 
                                               FontFamily="Montserrat"
                                               HorizontalAlignment="Center" 
                                               Margin="0,10,0,0"/>
                                    <Button x:Name="btnSelectImage" 
                                            Content="Choose File" 
                                            BorderThickness="0"
                                            Foreground="White"
                                            FontSize="12"
                                            FontFamily="Montserrat"
                                            Cursor="Hand"  
                                            Click="ChangeProfileImage_Click" 
                                            Width="100" Height="30"
                                            Margin="0,10,0,0">
                                        <Button.Template>
                                            <ControlTemplate TargetType="{x:Type Button}">
                                                <Border Width="100" Height="30"
                                                        CornerRadius="10"
                                                        Background="{TemplateBinding Background}">
                                                    <ContentPresenter VerticalAlignment="Center"
                                                                    HorizontalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- File Upload Progress List -->
                        <ItemsControl ItemsSource="{Binding UploadingFiles}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="0,5,0,5" CornerRadius="5" Padding="10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- File Icon -->
                                            <fa:IconImage Icon="File" 
                                                          Grid.Column="0" 
                                                          Grid.RowSpan="2" 
                                                          Margin="0,0,10,0"
                                                          Foreground="White"
                                                          Width="20" 
                                                          Height="20"/>

                                            <!-- File Name -->
                                            <TextBlock Grid.Column="1" Grid.Row="0" 
                                                      Text="{Binding FileName}" 
                                                      Foreground="White"
                                                      FontSize="12" 
                                                      FontFamily="Montserrat"/>

                                            <!-- Progress Bar -->
                                            <Grid Grid.Column="1" Grid.Row="1" Margin="0,5,0,0">
                                                <Border CornerRadius="10">
                                                    <ProgressBar Value="{Binding Progress}" 
                                                             Maximum="100" 
                                                             Height="6" 
                                                             Foreground="#27A4FD"
                                                             Background="#333"/>
                                                </Border>
                                            </Grid>

                                            <!-- Progress Text and Cancel Button -->
                                            <StackPanel Grid.Column="2" Grid.RowSpan="2" Orientation="Horizontal">
                                                <TextBlock Text="{Binding ProgressText}" 
                                                         Foreground="#999" 
                                                         VerticalAlignment="Center"
                                                         Margin="0,0,10,0"/>
                                                <Button x:Name="CancelUpload"
                                                        Click="CancelUpload_Click"
                                                        CommandParameter="{Binding FileName}"
                                                        Width="20" Height="20"
                                                        Background="Transparent"
                                                        BorderThickness="0">
                                                    <fa:IconImage Icon="Xmark" 
                                                        Foreground="White"
                                                        Width="12" 
                                                        Height="12"/>
                                                </Button>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Uploaded Files Display -->
                        <TextBlock Text="Uploaded Files" 
                                   Foreground="DarkGray"
                                   FontSize="12"
                                   FontWeight="Medium"
                                   FontFamily="Montserrat"
                                   Margin="0,10,0,5"
                                   Visibility="{Binding HasUploadedFiles, Converter={StaticResource BoolToVisibilityConverter}}"/>

                        <ItemsControl ItemsSource="{Binding ImageFiles}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="0,5,0,5" 
                    CornerRadius="5" 
                    Padding="10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- File Icon -->
                                            <fa:IconImage Icon="File" 
                                Grid.Column="0"
                                Margin="0,0,10,0"
                                Foreground="White"
                                Width="20" 
                                Height="20"/>

                                            <!-- File Name -->
                                            <TextBlock Text="{Binding}" 
                             Grid.Column="1"
                             Foreground="White"
                             FontSize="12"
                             FontFamily="Montserrat"
                             VerticalAlignment="Center"
                             TextWrapping="NoWrap"
                             TextTrimming="CharacterEllipsis"/>

                                            <!-- Remove Button -->
                                            <Button Grid.Column="2"
                            Width="20" 
                            Height="20"
                            Background="Transparent"
                            BorderThickness="0"
                            Click="btnClear_Click" 
                            DataContext="{Binding}">
                                                <fa:IconImage Icon="Xmark" 
                                    Foreground="White"
                                    Width="12" 
                                    Height="12"/>
                                            </Button>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <Button x:Name="btnSubmit"                          
                        BorderThickness="0"
                        Content="SUBMIT"
                        Foreground="White"
                        FontSize="12"
                        FontFamily="Montserrat"
                        Cursor="Hand"                           
                        Margin="0,20,0,0"
                        Click="btnSubmit_Click"
                        IsDefault="True">
                            <Button.Template>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border Width="150" Height="40"
                                    CornerRadius="20"
                                    Background="{TemplateBinding Background}">
                                        <ContentPresenter VerticalAlignment="Center"
                                                HorizontalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </ScrollViewer>

                <Controls:CircularLoadingControl x:Name="LoadingControl"
                                                 HorizontalAlignment="Center" 
                                                 VerticalAlignment="Top" 
                                                 Height="750" Width="500" 
                                                 Grid.Column="1" 
                                                 Grid.RowSpan="2"
                                                 Visibility="Collapsed"/>
            </Grid>
        </Border>
    </Border>
</Window>