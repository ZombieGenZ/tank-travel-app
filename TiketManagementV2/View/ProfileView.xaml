<UserControl x:Class="TiketManagementV2.View.ProfileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TiketManagementV2.View"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:behaviors="clr-namespace:TiketManagementV2.Helpers"

             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </UserControl.Resources>

    <Border Grid.Column="1"
        Grid.RowSpan="2"
        Margin="10,20,20,20"
        Background="#200F53"
        CornerRadius="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header with Profile Summary -->
            <Border Background="#1a0d45" 
                CornerRadius="20,20,0,0"
                Padding="30,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button Background="Transparent" BorderThickness="0"
                            Command="{Binding ChangeProfileImageCommand}"
                            Style="{StaticResource TextButton}">
                        <Ellipse Width="60" Height="60">
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="{Binding PathUser}"/>
                            </Ellipse.Fill>
                        </Ellipse>
                    </Button>

                    <StackPanel Grid.Column="1" 
                          Margin="20,0,0,0"
                          VerticalAlignment="Center">
                        <TextBlock Text="Cài đặt tài khoản" 
                             FontSize="24" 
                             FontWeight="Bold" 
                             Foreground="#E0E1F1"/>
                        <TextBlock Text="Cập nhật thông tin cá nhân của bạn" 
                             FontSize="14" 
                             Foreground="#8A8D9F"
                             Margin="0,5,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Form Content -->
            <ScrollViewer Grid.Row="1" 
                          Padding="30"
                          VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Personal Information Section -->
                    <Border Background="#251361" 
                            CornerRadius="15"
                            Padding="25"
                            Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="Thông tin cá nhân" 
                                     FontSize="18" 
                                     FontWeight="SemiBold"
                                     Foreground="#E0E1F1"
                                     Margin="0,0,0,20"/>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Display Name -->
                                <StackPanel Grid.Row="0" Margin="0,0,0,20">
                                    <TextBlock Text="Họ tên"
                                               Style="{StaticResource FieldLabel}"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Read-only view -->
                                        <Border x:Name="DisplayNameReadOnly" 
                                                Background="#2d1873" 
                                                CornerRadius="8">
                                            <TextBlock Text="{Binding DisplayName}"
                                                       Style="{StaticResource ReadOnlyTextBlock}"/>
                                        </Border>

                                        <!-- Edit button -->
                                        <Button Grid.Column="1" 
                                                x:Name="DisplayNameEditButton"
                                                Content="✏️" 
                                                Width="40" 
                                                Style="{StaticResource ModernButton}"
                                                Margin="8,0,0,0"
                                                Click="EditButton_Click"
                                                Tag="DisplayNameEditMode"/>

                                        <!-- Edit mode -->
                                        <Grid x:Name="DisplayNameEditMode" Grid.Column="0" Visibility="Collapsed">
                                            <TextBox x:Name="DisplayNameTextBox"
                                                     Text="{Binding DisplayName, UpdateSourceTrigger=PropertyChanged}"
                                                     Style="{StaticResource ModernTextBox}"
                                                     LostFocus="TextBox_LostFocus"/>
                                        </Grid>

                                        <!-- Edit buttons -->
                                        <StackPanel Grid.Column="2" 
                                                    Orientation="Horizontal" 
                                                    Margin="8,0,0,0"
                                                    x:Name="DisplayNameButtons"
                                                    Visibility="Collapsed">
                                            <Button Content="✓" 
                                                    Width="40" 
                                                    Style="{StaticResource ConfirmButton}"
                                                    Margin="0,0,5,0"
                                                    Click="Confirm_Click"
                                                    Tag="DisplayNameEditMode"/>
                                            <Button Content="✕" 
                                                    Width="40" 
                                                    Style="{StaticResource CancelButton}"
                                                    Click="Cancel_Click"
                                                    Tag="DisplayNameEditMode"/>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>

                                <!-- Email -->
                                <StackPanel Grid.Row="1" Margin="0,0,0,20">
                                    <TextBlock Text="Email"
                                               Style="{StaticResource FieldLabel}"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <!-- Read-only view -->
                                        <Border x:Name="EmailReadOnly" 
                                                Background="#2d1873" 
                                                CornerRadius="8">
                                            <TextBlock Text="{Binding Email}"
                                                       Style="{StaticResource ReadOnlyTextBlock}"/>
                                        </Border>
                                        <!-- Edit button -->
                                        <Button Grid.Column="1" 
                                                x:Name="EmailEditButton"
                                                Content="✏️" 
                                                Width="40" 
                                                Style="{StaticResource ModernButton}"
                                                Margin="8,0,0,0"
                                                Click="EditButton_Click"
                                                Tag="EmailEditMode"/>
                                        <!-- Edit mode -->
                                        <Grid x:Name="EmailEditMode" Grid.Column="0" Visibility="Collapsed">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <!-- Email input -->
                                            <TextBox x:Name="EmailTextBox"
                                                     Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                                                     Style="{StaticResource ModernTextBox}"
                                                     Grid.Row="0"
                                                     LostFocus="TextBox_LostFocus"/>
                                            <!-- Confirmation code input -->
                                            <TextBox x:Name="EmailConfirmationCodeTextBox"
                                                     Style="{StaticResource ModernTextBox}"
                                                     Grid.Row="1"
                                                     Margin="0,5,0,0"
                                                     Visibility="Collapsed"/>
                                        </Grid>
                                        <!-- Edit buttons -->
                                        <StackPanel Grid.Column="2" 
                                                    Orientation="Horizontal" 
                                                    Margin="8,0,0,0"
                                                    x:Name="EmailButtons"
                                                    Visibility="Collapsed">
                                            <Button x:Name="EmailSendCodeButton"
                                                    Content="Send Code" 
                                                    Width="80" 
                                                    Style="{StaticResource ConfirmButton}"
                                                    Margin="0,0,5,0"
                                                    Click="SendEmailCode_Click"
                                                    Tag="EmailEditMode"/>
                                            <Button x:Name="EmailConfirmButton"
                                                    Content="✓" 
                                                    Width="40" 
                                                    Style="{StaticResource ConfirmButton}"
                                                    Margin="0,0,5,0"
                                                    Click="Confirm_Click"
                                                    Tag="EmailEditMode"
                                                    Visibility="Collapsed"/>
                                            <Button Content="✕" 
                                                    Width="40" 
                                                    Style="{StaticResource CancelButton}"
                                                    Click="Cancel_Click"
                                                    Tag="EmailEditMode"/>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>

                                <!-- Phone -->
                                <StackPanel Grid.Row="2" Margin="0,0,0,20">
                                    <TextBlock Text="Số điện thoại"
                                               Style="{StaticResource FieldLabel}"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Read-only view -->
                                        <Border x:Name="PhoneReadOnly" 
                                                Background="#2d1873" 
                                                CornerRadius="8">
                                            <TextBlock Text="{Binding Phone}"
                                                       Style="{StaticResource ReadOnlyTextBlock}"/>
                                        </Border>

                                        <!-- Edit button -->
                                        <Button Grid.Column="1" 
                                                x:Name="PhoneEditButton"
                                                Content="✏️" 
                                                Width="40" 
                                                Style="{StaticResource ModernButton}"
                                                Margin="8,0,0,0"
                                                Click="EditButton_Click"
                                                Tag="PhoneEditMode"/>

                                        <!-- Edit mode -->
                                        <Grid x:Name="PhoneEditMode" Grid.Column="0" Visibility="Collapsed">
                                            <TextBox x:Name="PhoneTextBox"
                                                     Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged}"
                                                     Style="{StaticResource ModernTextBox}"
                                                     LostFocus="TextBox_LostFocus"/>
                                        </Grid>

                                        <!-- Edit buttons -->
                                        <StackPanel Grid.Column="2" 
                                                    Orientation="Horizontal" 
                                                    Margin="8,0,0,0"
                                                    x:Name="PhoneButtons"
                                                    Visibility="Collapsed">
                                            <Button Content="✓" 
                                                    Width="40" 
                                                    Style="{StaticResource ConfirmButton}"
                                                    Margin="0,0,5,0"
                                                    Click="Confirm_Click"
                                                    Tag="PhoneEditMode"/>
                                            <Button Content="✕" 
                                                    Width="40" 
                                                    Style="{StaticResource CancelButton}"
                                                    Click="Cancel_Click"
                                                    Tag="PhoneEditMode"/>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>

                                <!--Password-->
                                <StackPanel Grid.Row="4" Margin="0,0,0,20">
                                    <TextBlock Text="Password"
                                               Style="{StaticResource FieldLabel}"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <!-- Read-only view -->
                                        <Border x:Name="PasswordReadOnly" 
                                                Background="#2d1873" 
                                                CornerRadius="8">
                                            <TextBlock Text="************"
                                                       Style="{StaticResource ReadOnlyTextBlock}"/>
                                        </Border>
                                        <!-- Edit button -->
                                        <Button Grid.Column="1" 
                                                x:Name="PasswordEditButton"
                                                Content="✏️" 
                                                Width="40" 
                                                Style="{StaticResource ModernButton}"
                                                Margin="8,0,0,0"
                                                Click="EditButton_Click"
                                                Tag="PasswordEditMode"/>
                                        <!-- Edit mode -->
                                        <Grid x:Name="PasswordEditMode" Grid.Column="0" Visibility="Collapsed">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- Old Password input -->
                                            <Grid Grid.Row="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <PasswordBox x:Name="OldPasswordTextBox"
                                                             Style="{StaticResource ModernPasswordBox}"
                                                             Grid.Column="0"
                                                             LostFocus="TextBox_LostFocus"/>
                                                <Button x:Name="OldPasswordVisibilityButton"
                                                        Grid.Column="1"
                                                        Click="TogglePasswordVisibility_Click"
                                                        Tag="OldPassword"
                                                        Width="30"
                                                        Height="30"
                                                        Margin="5,0,0,0">
                                                    <fa:IconBlock Icon="Eye" />
                                                </Button>
                                                <TextBox x:Name="OldPasswordVisibleTextBox"
                                                         Style="{StaticResource ModernTextBox}"
                                                         Grid.Column="0"
                                                         Visibility="Collapsed"
                                                         LostFocus="TextBox_LostFocus"/>
                                            </Grid>

                                            <!-- New Password input -->
                                            <Grid Grid.Row="1" Margin="0,5,0,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <PasswordBox x:Name="PasswordTextBox"
                                                             Style="{StaticResource ModernPasswordBox}"
                                                             Grid.Column="0"
                                                             LostFocus="TextBox_LostFocus"
                                                             PasswordChanged="PasswordTextBox_PasswordChanged"/>
                                                <Button x:Name="PasswordVisibilityButton"
                                                        Grid.Column="1"
                                                        Click="TogglePasswordVisibility_Click"
                                                        Tag="Password"
                                                        Width="30"
                                                        Height="30"
                                                        Margin="5,0,0,0">
                                                    <fa:IconBlock Icon="Eye" />
                                                </Button>
                                                <TextBox x:Name="PasswordVisibleTextBox"
                                                         Style="{StaticResource ModernTextBox}"
                                                         Grid.Column="0"
                                                         Visibility="Collapsed"
                                                         LostFocus="TextBox_LostFocus"
                                                         TextChanged="PasswordVisibleTextBox_TextChanged"/>
                                            </Grid>

                                            <!-- Confirm password input -->
                                            <Grid Grid.Row="2" Margin="0,5,0,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <PasswordBox x:Name="ConfirmPasswordTextBox"
                                                             Style="{StaticResource ModernPasswordBox}"
                                                             Grid.Column="0"
                                                             LostFocus="TextBox_LostFocus"
                                                             PasswordChanged="ConfirmPasswordTextBox_PasswordChanged"/>
                                                <Button x:Name="ConfirmPasswordVisibilityButton"
                                                        Grid.Column="1"
                                                        Click="TogglePasswordVisibility_Click"
                                                        Tag="ConfirmPassword"
                                                        Width="30"
                                                        Height="30"
                                                        Margin="5,0,0,0">
                                                    <fa:IconBlock Icon="Eye" />
                                                </Button>
                                                <TextBox x:Name="ConfirmPasswordVisibleTextBox"
                                                         Style="{StaticResource ModernTextBox}"
                                                         Grid.Column="0"
                                                         Visibility="Collapsed"
                                                         LostFocus="TextBox_LostFocus"
                                                         TextChanged="ConfirmPasswordVisibleTextBox_TextChanged"/>
                                            </Grid>

                                            <!-- Password validation message -->
                                            <TextBlock x:Name="PasswordValidationMessage"
               Grid.Row="3"
               Margin="0,5,0,0"
               Foreground="Red"
               TextWrapping="Wrap"
               Visibility="Collapsed"/>
                                        </Grid>
                                        <!-- Edit buttons -->
                                        <StackPanel Grid.Column="2" 
                                                    Orientation="Horizontal" 
                                                    Margin="8,0,0,0"
                                                    x:Name="PasswordButtons"
                                                    Visibility="Collapsed">
                                            <Button Content="✓" 
                                                    Width="40"
                                                    Style="{StaticResource ConfirmButton}"
                                                    Margin="0,0,5,0"
                                                    Click="Confirm_Click"
                                                    Tag="PasswordEditMode"/>
                                            <Button Content="✕" 
                                                    Width="40"
                                                    Style="{StaticResource CancelButton}"
                                                    Click="Cancel_Click"
                                                    Tag="PasswordEditMode"/>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</UserControl>