<UserControl x:Class="TiketManagementV2.View.CensorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TiketManagementV2.View"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1200">
    <Border Background="#0A003A" CornerRadius="15" Padding="20">
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition MinWidth="300" Width="*"/>
                    <ColumnDefinition MinWidth="300" Width="*"/>
                    <ColumnDefinition MinWidth="300" Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Transportation Method Section -->
                <Border Grid.Column="0" Background="#1C0E49" CornerRadius="10" Padding="15" Margin="0,0,10,0">
                    <StackPanel>
                        <DockPanel Margin="0,0,0,15">
                            <TextBlock Text="Tên phương tiện:" Foreground="#BCBEE0" DockPanel.Dock="Left" VerticalAlignment="Center"/>
                            <TextBox Margin="10,0,0,0" Background="#24105F" Foreground="#E0E1F1" BorderBrush="#6D2FFF"/>
                        </DockPanel>

                        <DockPanel Margin="0,0,0,15">
                            <TextBlock Text="Loại phương tiện:" Foreground="#BCBEE0" DockPanel.Dock="Left" VerticalAlignment="Center"/>
                            <ComboBox Margin="10,0,0,0" Background="#24105F" Foreground="#E0E1F1" BorderBrush="#6D2FFF">
                                <ComboBoxItem Content="Xe buýt"/>
                            </ComboBox>
                        </DockPanel>

                        <DockPanel Margin="0,0,0,15">
                            <TextBlock Text="Quy tắc khi lên xe:" Foreground="#BCBEE0" DockPanel.Dock="Left" VerticalAlignment="Center"/>
                            <Button Content="Thêm quy tắc" DockPanel.Dock="Right" Margin="10,0,0,0" Padding="10,5"
                                    Background="#836EFB" Foreground="#E0E1F1" BorderThickness="0"/>
                            <TextBox Margin="10,0,0,0" Background="#24105F" Foreground="#E0E1F1" BorderBrush="#6D2FFF"/>
                        </DockPanel>

                        <ListBox Background="Transparent" BorderBrush="#6D2FFF" MinHeight="200"
                                ScrollViewer.VerticalScrollBarVisibility="Auto"
                                ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>
                    </StackPanel>
                </Border>

                <!-- Business Approval Section -->
                <Border Grid.Column="1" Background="#1C0E49" CornerRadius="10" Padding="15" Margin="10,0">
                    <DockPanel>
                        <DockPanel DockPanel.Dock="Top" Margin="0,0,0,15">
                            <Button Content="Duyệt tất cả" DockPanel.Dock="Right" Margin="10,0,0,0" Padding="10,5"
                                    Background="#836EFB" Foreground="#E0E1F1" BorderThickness="0"/>
                            <Button Content="Làm mới" DockPanel.Dock="Right" Margin="10,0,0,0" Padding="10,5"
                                    Background="#836EFB" Foreground="#E0E1F1" BorderThickness="0"/>
                            <TextBox Background="#24105F" Foreground="#E0E1F1" BorderBrush="#6D2FFF"/>
                        </DockPanel>

                        <ListBox Background="Transparent" BorderBrush="#6D2FFF"
                                ScrollViewer.VerticalScrollBarVisibility="Auto"
                                ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ListBoxItem>
                                <Border Background="#24105F" CornerRadius="5" Padding="15">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="Phương Trang Bus" Foreground="#E0E1F1" FontWeight="Bold" FontSize="14" Margin="0,0,0,5"/>
                                            <TextBlock Text="Bus Operator" Foreground="#9497CD" Margin="0,0,0,5"/>
                                            <TextBlock Text="Ngày đăng ký: 2024-01-19" Foreground="#9497CD"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                                            <Button Content="Duyệt" Margin="0,0,10,0" Padding="15,5"
                                                    Background="#836EFB" Foreground="#E0E1F1" BorderThickness="0"/>
                                            <Button Content="Từ chối" Padding="15,5"
                                                    Background="#FB539B" Foreground="#E0E1F1" BorderThickness="0"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </ListBoxItem>
                        </ListBox>
                    </DockPanel>
                </Border>

                <!-- Time Schedule Section -->
                <Border Grid.Column="2" Background="#1C0E49" CornerRadius="10" Padding="15" Margin="0,0,0,0">
                    <DockPanel>
                        <DockPanel DockPanel.Dock="Top" Margin="0,0,0,15">
                            <Button Content="Thêm mới" DockPanel.Dock="Left" Margin="0,0,10,0" Padding="10,5"
                                    Background="#836EFB" Foreground="#E0E1F1" BorderThickness="0"/>
                            <Button Content="Tìm kiếm" DockPanel.Dock="Right" Padding="10,5"
                                    Background="#836EFB" Foreground="#E0E1F1" BorderThickness="0"/>
                            <TextBox Background="#24105F" Foreground="#E0E1F1" BorderBrush="#6D2FFF"/>
                        </DockPanel>

                        <DataGrid AutoGenerateColumns="False" 
                                Background="Transparent" BorderBrush="#6D2FFF"
                                RowBackground="#24105F" AlternatingRowBackground="#1C0E49"
                                Foreground="#E0E1F1"
                                ScrollViewer.VerticalScrollBarVisibility="Auto"
                                ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                HeadersVisibility="Column">
                            <DataGrid.Resources>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#1C0E49"/>
                                    <Setter Property="Foreground" Value="#E0E1F1"/>
                                    <Setter Property="Padding" Value="10,5"/>
                                    <Setter Property="BorderThickness" Value="0,0,1,1"/>
                                    <Setter Property="BorderBrush" Value="#6D2FFF"/>
                                </Style>
                            </DataGrid.Resources>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="Auto"/>
                                <DataGridTextColumn Header="Thời gian bắt đầu" Binding="{Binding StartTime}" Width="*"/>
                                <DataGridTextColumn Header="Thời gian kết thúc" Binding="{Binding EndTime}" Width="*"/>
                                <DataGridTextColumn Header="Chức năng" Binding="{Binding Function}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </DockPanel>
                </Border>
            </Grid>
        </ScrollViewer>
    </Border>
</UserControl>