<UserControl x:Class="TiketManagementV2.View.CensorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TiketManagementV2.View"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1200">
    <Border Background="#0A003A" CornerRadius="15" Padding="20">
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
            <StackPanel Orientation="Horizontal">
                <!-- Transportation Method Section -->
                <Border Background="#1C0E49" CornerRadius="10" Padding="15" Margin="0,0,10,0" 
                        MinWidth="350" MaxWidth="500" Width="Auto">
                    <DockPanel>
                        <DockPanel DockPanel.Dock="Top" Margin="0,0,0,15">
                            <Button Content="Tìm kiếm" DockPanel.Dock="Right" Margin="10,0,0,0" Padding="10,5"
                                    Background="#836EFB" Foreground="#E0E1F1" BorderThickness="0"/>
                            <TextBox Background="#24105F" Foreground="#E0E1F1" BorderBrush="#6D2FFF"/>
                        </DockPanel>

                        <ListBox Background="Transparent" BorderBrush="#6D2FFF"
                                ScrollViewer.VerticalScrollBarVisibility="Auto"
                                ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="Margin" Value="0,0,0,10"/>
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBoxItem>
                                <Border Background="#24105F" CornerRadius="5" Padding="15">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="Xe buýt" Foreground="#E0E1F1" FontWeight="Bold" FontSize="14" 
                                                     Margin="0,0,0,5" TextWrapping="Wrap"/>
                                            <TextBlock Text="Loại phương tiện" Foreground="#9497CD" 
                                                     Margin="0,0,0,5" TextWrapping="Wrap"/>
                                            <TextBlock Text="Quy tắc: Không hút thuốc" Foreground="#9497CD" 
                                                     TextWrapping="Wrap"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1" Orientation="Horizontal" 
                                                  VerticalAlignment="Center" Margin="10,0,0,0">
                                            <Button Content="Sửa" Margin="0,0,10,0" Padding="15,5"
                                                    Background="#836EFB" Foreground="#E0E1F1" BorderThickness="0"/>
                                            <Button Content="Xóa" Padding="15,5"
                                                    Background="#FB539B" Foreground="#E0E1F1" BorderThickness="0"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </ListBoxItem>
                        </ListBox>
                    </DockPanel>
                </Border>

                <!-- Business Approval Section -->
                <Border Background="#1C0E49" CornerRadius="10" Padding="15" Margin="10,0" 
                        MinWidth="350" MaxWidth="500" Width="Auto">
                    <DockPanel>
                        <DockPanel DockPanel.Dock="Top" Margin="0,0,0,15">
                            <Button Content="Duyệt tất cả" DockPanel.Dock="Right" Margin="10,0,0,0" Padding="10,5"
                                    Background="#836EFB" Foreground="#E0E1F1" BorderThickness="0"/>
                            <Button Content="Làm mới" DockPanel.Dock="Right" Margin="10,0,0,0" Padding="10,5"
                                    Background="#836EFB" Foreground="#E0E1F1" BorderThickness="0"/>
                            <TextBox Background="#24105F" Foreground="#E0E1F1" BorderBrush="#6D2FFF"/>
                        </DockPanel>

                        <ListBox Background="Transparent" BorderBrush="#6D2FFF"
                                ScrollViewer.VerticalScrollBarVisibility="Auto"
                                ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="Margin" Value="0,0,0,10"/>
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBoxItem>
                                <Border Background="#24105F" CornerRadius="5" Padding="15">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="Phương Trang Bus" Foreground="#E0E1F1" FontWeight="Bold" 
                                                     FontSize="14" Margin="0,0,0,5" TextWrapping="Wrap"/>
                                            <TextBlock Text="Bus Operator" Foreground="#9497CD" 
                                                     Margin="0,0,0,5" TextWrapping="Wrap"/>
                                            <TextBlock Text="Ngày đăng ký: 2024-01-19" Foreground="#9497CD" 
                                                     TextWrapping="Wrap"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1" Orientation="Horizontal" 
                                                  VerticalAlignment="Center" Margin="10,0,0,0">
                                            <Button Content="Duyệt" Margin="0,0,10,0" Padding="15,5"
                                                    Background="#836EFB" Foreground="#E0E1F1" BorderThickness="0"/>
                                            <Button Content="Từ chối" Padding="15,5"
                                                    Background="#FB539B" Foreground="#E0E1F1" BorderThickness="0"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </ListBoxItem>
                        </ListBox>
                    </DockPanel>
                </Border>

                <!-- Time Schedule Section -->
                <Border Background="#1C0E49" CornerRadius="10" Padding="15" Margin="0,0,0,0" 
                        MinWidth="350" MaxWidth="500" Width="Auto">
                    <DockPanel>
                        <DockPanel DockPanel.Dock="Top" Margin="0,0,0,15">
                            <Button Content="Tìm kiếm" DockPanel.Dock="Right" Margin="10,0,0,0" Padding="10,5"
                                    Background="#836EFB" Foreground="#E0E1F1" BorderThickness="0"/>
                            <TextBox Background="#24105F" Foreground="#E0E1F1" BorderBrush="#6D2FFF"/>
                        </DockPanel>

                        <ListBox Background="Transparent" BorderBrush="#6D2FFF"
                                ScrollViewer.VerticalScrollBarVisibility="Auto"
                                ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="Margin" Value="0,0,0,10"/>
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBoxItem>
                                <Border Background="#24105F" CornerRadius="5" Padding="15">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="Lịch trình 001" Foreground="#E0E1F1" FontWeight="Bold" 
                                                     FontSize="14" Margin="0,0,0,5" TextWrapping="Wrap"/>
                                            <TextBlock Text="8:00 - 17:00" Foreground="#9497CD" 
                                                     Margin="0,0,0,5" TextWrapping="Wrap"/>
                                            <TextBlock Text="Hoạt động" Foreground="#9497CD" 
                                                     TextWrapping="Wrap"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1" Orientation="Horizontal" 
                                                  VerticalAlignment="Center" Margin="10,0,0,0">
                                            <Button Content="Sửa" Margin="0,0,10,0" Padding="15,5"
                                                    Background="#836EFB" Foreground="#E0E1F1" BorderThickness="0"/>
                                            <Button Content="Xóa" Padding="15,5"
                                                    Background="#FB539B" Foreground="#E0E1F1" BorderThickness="0"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </ListBoxItem>
                        </ListBox>
                    </DockPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Border>
</UserControl>