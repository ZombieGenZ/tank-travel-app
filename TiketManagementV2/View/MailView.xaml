<Window x:Class="TiketManagementV2.View.MailView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        xmlns:local="clr-namespace:TiketManagementV2.View"
        mc:Ignorable="d"
        Title="MailView" Height="500" Width="400"
        Icon="/Images/TANK_logo_rmbg.ico"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        MouseDown="Window_MouseDown">
    <Border CornerRadius="10" BorderThickness="1">
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="{StaticResource winBorderColor1}" Offset="0"/>
                <GradientStop Color="{StaticResource winBorderColor2}" Offset="0.5"/>
                <GradientStop Color="{StaticResource winBorderColor3}" Offset="1"/>
            </LinearGradientBrush>
        </Border.BorderBrush>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" CornerRadius="10,10,0,0">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0.7">
                        <GradientStop Color="{StaticResource secondaryBackColor1}" Offset="0"/>
                        <GradientStop Color="{StaticResource secondaryBackColor2}" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Notifications"
                             Foreground="{StaticResource titleColor2}"
                             FontSize="16"
                             FontFamily="Montserrat"
                             FontWeight="Medium"
                             VerticalAlignment="Center"
                             Margin="15,0,0,0"/>

                    <Button x:Name="btnClose"
                            Grid.Column="1"
                            Style="{StaticResource controlButton}"
                            Tag="{StaticResource color4}"
                            Click="btnClose_Click"
                            Margin="0,0,5,0">
                        <fa:IconImage Icon="Xmark" Style="{StaticResource controlButtonIcon}"/>
                    </Button>
                </Grid>
            </Border>

            <!-- Notification Content -->
            <Border Grid.Row="1" CornerRadius="0,0,10,10">
                <Border.Background>
                    <LinearGradientBrush StartPoint="1,1" EndPoint="0,0">
                        <GradientStop Color="{StaticResource primaryBackColor1}" Offset="0"/>
                        <GradientStop Color="{StaticResource primaryBackColor2}" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="NotificationsList" Margin="10">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="0,5" 
                                        CornerRadius="5"
                                        Background="#24105F"
                                        Padding="10">
                                    <Grid Cursor="Hand">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <fa:IconImage Icon="{Binding Icon}"
                                                     Height="20"
                                                     Width="20"
                                                     Margin="0,0,10,0"
                                                     Foreground="{StaticResource titleColor2}"/>

                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="{Binding Title}"
                                                       Foreground="{StaticResource titleColor2}"
                                                       FontSize="14"
                                                       FontWeight="Medium"/>

                                            <TextBlock Text="{Binding Message}"
                                                       Foreground="{StaticResource plainTextColor3}"
                                                       FontSize="12"
                                                       TextWrapping="Wrap"
                                                       Margin="0,5,0,0"/>

                                            <TextBlock Text="{Binding Time}"
                                                       Foreground="{StaticResource plainTextColor2}"
                                                       FontSize="10"
                                                       HorizontalAlignment="Right"
                                                       Margin="0,5,0,0"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>
        </Grid>
    </Border>
</Window>
