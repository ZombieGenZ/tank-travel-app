<UserControl x:Class="TiketManagementV2.View.VehicleManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:local="clr-namespace:TiketManagementV2.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- Thanh tìm kiếm -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal"
            VerticalAlignment="Top"
            HorizontalAlignment="Right"
            Grid.Column="1">
                <Grid>
                    <TextBox x:Name="SearchTextBox"
                             Width="300"
                             Height="24"
                             FontSize="13"
                             Background="Transparent"
                             Foreground="{StaticResource plainTextColor3}"
                             BorderBrush="{StaticResource plainTextColor3}"
                             BorderThickness="0,0,0,1"
                             VerticalContentAlignment="Center"
                             TextChanged="SearchTextBox_TextChanged"/>

                    <TextBlock x:Name="SearchPlaceholder"
                               Text="Search..."
                               Foreground="Gray"
                               VerticalAlignment="Center"
                               Margin="5,0,0,0"
                               IsHitTestVisible="False"/>
                </Grid>

                <Button x:Name="AddButton"
                        BorderThickness="0"
                        Padding="5"
                        Command="{Binding SeachCommand}"      
                        Style="{StaticResource hoverbutton}">
                    <fa:IconImage Icon="Search"
                      Height="20"
                      Width="20"
                      Foreground="{StaticResource plainTextColor3}"/>
                </Button>
            </StackPanel>

            <Button Grid.Column="0"
                    Content="ADD"                            
                    FontSize="12"
                    Command="{Binding AddCommand}"
                    FontFamily="Montserrat"
                    Cursor="Hand"
                    BorderThickness="0"
                    Foreground="White"
                    VerticalAlignment="Top"
                    Style="{StaticResource ButtonCensor}"/>
        </Grid>

        <!-- DataGrid hiển thị danh sách -->
        <Border Grid.Row="1"
                Background="#200F53"
                CornerRadius="10" 
                Padding="10">
            <Grid>
                <!-- DataGrid -->
                <DataGrid ItemsSource="{Binding ManagedFilteredVehicles}" 
                         Style="{StaticResource TransparentDataGrid}" 
                         Height="600" 
                         VerticalAlignment="Top">
                    <DataGrid.Resources>
                        <Style TargetType="DataGridCell" BasedOn="{StaticResource TransparentDataGridCell}"/>
                        <Style TargetType="DataGridRow" BasedOn="{StaticResource TransparentDataGridRow}">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Tag" Value="ShowButtons"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                        <Style TargetType="ScrollViewer" BasedOn="{StaticResource CustomScrollViewerStyle}"/>
                        <Style TargetType="ScrollBar" BasedOn="{StaticResource CustomScrollBarStyle}"/>
                    </DataGrid.Resources>
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource CustomColumnHeader}"/>
                    </DataGrid.ColumnHeaderStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding User}" Header="Owner"/>
                        <DataGridTextColumn Binding="{Binding LicensePlate}" Header="License Plate"/>
                        <DataGridTextColumn Binding="{Binding vehicleType}" Header="Vehicle"/>
                        <DataGridTextColumn Binding="{Binding seatType}" Header="Seat Type"/>
                        <DataGridTextColumn Binding="{Binding seats}" Header="Seats"/>
                        <DataGridTextColumn Binding="{Binding rules}" Header="Rules"/>
                        <DataGridTextColumn Binding="{Binding amenities}" Header="amenities"/>
                        <!-- Thêm cột mới chứa các nút -->
                        <DataGridTemplateColumn Width="140">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <Button Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}">
                                            <Button.Style>
                                                <Style TargetType="Button" BasedOn="{StaticResource ButtonEdit}">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=Tag}" Value="ShowButtons">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>

                                        <Button Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}">
                                            <Button.Style>
                                                <Style TargetType="Button" BasedOn="{StaticResource ButtonBan}">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=Tag}" Value="ShowButtons">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                    </DataGrid.Columns>
                </DataGrid>

                <!-- TextBlock Load More -->
                <TextBlock Text="Load More"
                           FontSize="15"
                           FontFamily="Montserrat"
                           Cursor="Hand"
                           Foreground="White"
                           VerticalAlignment="Bottom"
                           Style="{StaticResource TextBlockLoadMore}"
                           MouseDown="TextBlock_MouseDown"
                           Visibility="{Binding CanLoadMore, Converter={StaticResource BoolToVisibilityConverter}}"/>

            </Grid>
        </Border>
    </Grid>
</UserControl>
