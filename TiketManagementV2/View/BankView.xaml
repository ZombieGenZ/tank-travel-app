<UserControl x:Class="TiketManagementV2.View.BankView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TiketManagementV2.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Grid.Column="1"
        Grid.RowSpan="2"
        Background="#200F53"
        CornerRadius="20">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Bank Account Section -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="TÀI KHOẢN NGÂN HÀNG CỦA TÔI" 
                     FontSize="16" 
                     FontWeight="SemiBold" 
                     Foreground="#E0E1F1"/>

                <Button Grid.Column="1"
                    Content="+ THÊM TÀI KHOẢN NGÂN HÀNG LIÊN KẾT"
                    Height="35"
                    Padding="15,0"
                    Background="Transparent"
                    BorderBrush="#6C5DD3"
                    BorderThickness="1"
                    Foreground="#6C5DD3"
                    FontSize="13"
                    FontWeight="SemiBold">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border"
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="8">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#2d1873"/>
                                                <Setter Property="Cursor" Value="Hand"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>

            <!-- No Bank Account Message -->
            <Border Grid.Row="1"
                Background="#251361"
                CornerRadius="15"
                Margin="0,20,0,0"
                MinHeight="150">
                <TextBlock Text="BẠN CHƯA CÓ TÀI KHOẢN NGÂN HÀNG"
                     FontSize="14"
                     Foreground="#8A8D9F"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"/>
            </Border>

            <!-- TSR Account Section -->
            <Grid Grid.Row="2" Margin="0,40,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="TÀI KHOẢN TSR CỦA TÔI" 
                     FontSize="16" 
                     FontWeight="SemiBold" 
                     Foreground="#E0E1F1"/>

                <Button Grid.Column="1"
                    Content="+ THÊM TÀI KHOẢN TSR LIÊN KẾT"
                    Height="35"
                    Padding="15,0"
                    Background="Transparent"
                    BorderBrush="#6C5DD3"
                    BorderThickness="1"
                    Foreground="#6C5DD3"
                    FontSize="13"
                    FontWeight="SemiBold">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border"
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="8">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#2d1873"/>
                                                <Setter Property="Cursor" Value="Hand"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>

            <!-- No TSR Account Message -->
            <Border Grid.Row="3"
                Background="#251361"
                CornerRadius="15"
                Margin="0,20,0,0"
                MinHeight="150">
                <TextBlock Text="BẠN CHƯA LIÊN KẾT THẺ"
                     FontSize="14"
                     Foreground="#8A8D9F"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"/>
            </Border>
        </Grid>
    </Border>
</UserControl>
