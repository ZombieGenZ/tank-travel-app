<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TiketManagementV2.View"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        xmlns:Controls="clr-namespace:TiketManagementV2.Controls" x:Class="TiketManagementV2.View.BusView"
        mc:Ignorable="d"
        Title="BusView" Height="700" Width="1300"
        Icon="/Images/TANK_logo_rmbg.ico"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True">
    <Grid>
        <Border CornerRadius="10"                    
            BorderThickness="1">

            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="{StaticResource winBorderColor1}" Offset="0"/>
                    <GradientStop Color="{StaticResource winBorderColor2}" Offset="0.5"/>
                    <GradientStop Color="{StaticResource winBorderColor3}" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>

            <Grid>
                <Grid.ColumnDefinitions>
                    <!--Navigation menu-->
                    <ColumnDefinition Width="250"/>
                    <!--Content section-->
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <!--Navigation Menu-->
                <Border CornerRadius="10,0,0,10"
                    Grid.Column="0">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0.7">
                            <GradientStop Color="{StaticResource secondaryBackColor1}" Offset="0"/>
                            <GradientStop Color="{StaticResource secondaryBackColor2}" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <StackPanel>
                        <!--Logo-->
                        <StackPanel Orientation="Horizontal"
                                Height="80"
                                Margin="0,15,0,30"
                                HorizontalAlignment="Center">
                            <Image Source="/Images/TANK_logo_rmbg.png" 
                               Height="80"/>
                        </StackPanel>

                        <!--Menu Buttons-->
                        <RadioButton Style="{StaticResource menuButton}"
                                 Tag="{StaticResource color1}"
                                 IsChecked="True"
                                 Command="{Binding ShowHomeBusViewCommand}">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Icon="Home" Style="{StaticResource menuButtonIcon}"/>
                                <TextBlock Text="Dashboard" Style="{StaticResource menuButtonText}"/>
                            </StackPanel>
                        </RadioButton>
                        <RadioButton Style="{StaticResource menuButton}"
                                 Tag="{StaticResource color2}"
                                 Command="{Binding ShowBankViewCommand}">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Icon="Bank" Style="{StaticResource menuButtonIcon}"/>
                                <TextBlock Text="Bank" Style="{StaticResource menuButtonText}"/>
                            </StackPanel>
                        </RadioButton>
                        <RadioButton Style="{StaticResource menuButton}"
                                 Tag="{StaticResource color9}"
                                 Command="{Binding ShowBusRouteViewCommand}">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Icon="Route" Style="{StaticResource menuButtonIcon}"/>
                                <TextBlock Text="Bus Routes" Style="{StaticResource menuButtonText}"/>
                            </StackPanel>
                        </RadioButton>
                        <RadioButton Style="{StaticResource menuButton}"
                                 Tag="{StaticResource color5}"
                                 Command="{Binding ShowVehicleManagementViewCommand}">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Icon="TicketAlt" Style="{StaticResource menuButtonIcon}"/>
                                <TextBlock Text="Vehicle Management" Style="{StaticResource menuButtonText}"/>
                            </StackPanel>
                        </RadioButton>
                        <RadioButton Style="{StaticResource menuButton}"
                                 Tag="{StaticResource color6}"
                                 Command="{Binding ShowChartViewCommand}">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Icon="ChartLine" Style="{StaticResource menuButtonIcon}"/>
                                <TextBlock Text="Chart" Style="{StaticResource menuButtonText}"/>
                            </StackPanel>
                        </RadioButton>

                    </StackPanel>
                </Border>

                <!--Main Section-->
                <Border CornerRadius="0,10,10,0"
                    Grid.Column="1">

                    <Border.Background>
                        <LinearGradientBrush StartPoint="1,1" EndPoint="0,0">
                            <GradientStop Color="{StaticResource primaryBackColor1}" Offset="0"/>
                            <GradientStop Color="{StaticResource primaryBackColor2}" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>

                    <Grid>
                        <Grid.RowDefinitions>
                            <!--Control bar-->
                            <RowDefinition Height="25"/>
                            <!--Header / Caption-->
                            <RowDefinition Height="35"/>
                            <!--Content section / Child views-->
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!--Control bar-->
                        <StackPanel x:Name="pnlControlBar"
                                Grid.Row="0"
                                Orientation="Horizontal"
                                FlowDirection="RightToLeft"
                                Background="Transparent"
                                Margin="0,0,5,0"
                                MouseLeftButtonDown="pnlControlBar_MouseLeftButtonDown"
                                MouseEnter="pnlControlBar_MouseEnter">
                            <Button x:Name="btnClose"
                                Style="{StaticResource controlButton}"
                                Tag="{StaticResource color4}"
                                Click="btnClose_Click">
                                <fa:IconImage Icon="Xmark" Style="{StaticResource controlButtonIcon}"/>
                            </Button>
                            <Button x:Name="btnMaximize"
                                Style="{StaticResource controlButton}"
                                Tag="{StaticResource color6}"
                                Click="btnMaximize_Click">
                                <fa:IconImage Icon="Square" Style="{StaticResource controlButtonIcon}"/>
                            </Button>
                            <Button x:Name="btnMinimize"
                                Style="{StaticResource controlButton}"
                                Tag="{StaticResource color8}"
                                Click="btnMinimize_Click">
                                <fa:IconImage Icon="WindowMinimize" Width="12" Style="{StaticResource controlButtonIcon}"/>
                            </Button>

                        </StackPanel>

                        <!--Header / Caption-->
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <!--Caption-->
                            <StackPanel Grid.Column="0"
                                    Orientation="Horizontal"
                                    VerticalAlignment="Center">
                                <fa:IconImage Icon="{Binding Icon}"
                                          Height="20"
                                          Width="20"
                                          Foreground="{StaticResource titleColor2}"
                                          Margin="35,0,10,0"/>

                                <TextBlock Text="{Binding Caption}"
                                       Foreground="{StaticResource titleColor2}"
                                       FontSize="16"
                                       FontFamily="Montserrat"
                                       FontWeight="Medium"
                                       VerticalAlignment="Center"/>
                            </StackPanel>

                            <!--User options-->
                            <StackPanel Grid.Column="1"
                                    Orientation="Horizontal"
                                    FlowDirection="RightToLeft"
                                    VerticalAlignment="Center"
                                    Margin="0,0,10,0">
                                <Grid>
                                    <Button x:Name="btnDropdown" 
                                        Style="{StaticResource iconButton}"
                                        Tag="{StaticResource color1}"
                                        Click="btnDropdown_Click">
                                        <fa:IconImage Icon="AngleDown"
                                                  Height="12" Width="12"
                                                  Style="{StaticResource iconButtonIcon}"/>
                                    </Button>

                                    <Popup x:Name="userDropdown" 
                                       PlacementTarget="{Binding ElementName=btnDropdown}"
                                       Placement="Bottom"
                                       StaysOpen="False" 
                                       AllowsTransparency="True">
                                        <Border CornerRadius="10">
                                            <Border.Background>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                    <GradientStop Color="{StaticResource secondaryBackColor1}" Offset="0"/>
                                                    <GradientStop Color="{StaticResource secondaryBackColor2}" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Border.Background>
                                            <Border.Effect>
                                                <DropShadowEffect ShadowDepth="2" 
                                                            BlurRadius="5" 
                                                            Opacity="0.3"/>
                                            </Border.Effect>
                                            <StackPanel Width="150">
                                                <Button x:Name="btnProfile" 
                                                    Height="45"
                                                    Command="{Binding ShowProfileViewCommand}"
                                                    Style="{StaticResource menuDropdownButton}">
                                                    <StackPanel Orientation="Horizontal"
                                                            HorizontalAlignment="Center">
                                                        <fa:IconImage Icon="User" 
                                                                  Height="15" 
                                                                  Width="15"
                                                                  Foreground="{StaticResource plainTextColor3}"/>
                                                        <TextBlock Text="Profile" 
                                                               Foreground="{StaticResource plainTextColor3}"
                                                               FontSize="13"
                                                               FontFamily="Montserrat"
                                                               Margin="10,0,0,0"
                                                               VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                </Button>

                                                <Separator Margin="10,2"
                                                       Background="{StaticResource plainTextColor3}"
                                                       Opacity="0.3"/>

                                                <Button x:Name="btnLogout" 
                                                    Height="45"
                                                    Click="btnLogout_Click"
                                                    Style="{StaticResource menuDropdownButton}">
                                                    <StackPanel Orientation="Horizontal"
                                                            HorizontalAlignment="Center">
                                                        <fa:IconImage Icon="SignOutAlt" 
                                                                  Height="15" 
                                                                  Width="15"
                                                                  Foreground="{StaticResource plainTextColor3}"/>
                                                        <TextBlock Text="Logout" 
                                                               Foreground="{StaticResource plainTextColor3}"
                                                               FontSize="13"
                                                               FontFamily="Montserrat"
                                                               Margin="10,0,0,0"
                                                               VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                </Button>
                                            </StackPanel>
                                        </Border>
                                    </Popup>
                                </Grid>
                                <TextBlock Text="{Binding CurrentUserAccount.DisplayName}"
                                       Foreground="{StaticResource titleColor3}"
                                       FontFamily="Montserrat"
                                       FontSize="12"
                                       VerticalAlignment="Center"/>
                                <Ellipse Height="35" Width="35"
                                     Stroke="{StaticResource color2}"
                                     StrokeThickness="2"
                                     Margin="10,0,10,0">
                                    <Ellipse.Fill>
                                        <ImageBrush ImageSource="{Binding PathUser}"/>
                                    </Ellipse.Fill>
                                </Ellipse>
                                <Button Style="{StaticResource iconButton}"
                                    Tag="{StaticResource color4}"
                                    Command="{Binding ShowMailViewCommand}">
                                    <Grid>
                                        <fa:IconImage Icon="Envelope" Style="{StaticResource iconButtonIcon}"/>

                                        <!-- Notification Badge -->
                                        <Border CornerRadius="10"
                                                Background="{StaticResource color7}"
                                                Width="10" Height="10"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Top"
                                                Margin="0,-3,12,0"
                                                Visibility="{Binding HasNewNotifications, Converter={StaticResource BoolToVisibilityConverter}}">
                                        </Border>
                                    </Grid>                                </Button>
                            </StackPanel>
                        </Grid>
                        <!--Content section / Pages-->
                        <Border Grid.Row="2" 
                            Margin="10"
                            CornerRadius="10">
                            <Frame x:Name="MainFrame"
                               NavigationUIVisibility="Hidden"
                               Content="{Binding CurrentView}"
                               />
                        </Border>
                    </Grid>
                </Border>
                <local:NotificationView Grid.Column="1" HorizontalAlignment="Left" Margin="111,-141,0,0" VerticalAlignment="Top"/>
            </Grid>
        </Border>
        <Controls:CircularLoadingControl 
            x:Name="LoadingControl"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Visibility="Collapsed"/>
    </Grid>
</Window>
