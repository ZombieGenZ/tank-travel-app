<UserControl x:Class="TiketManagementV2.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:local="clr-namespace:TiketManagementV2.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Grid.Column="1"
            Grid.RowSpan="2"
            Background="#200F53"
            CornerRadius="15">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="17.925"/>
                <RowDefinition Height="79.959"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="5,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="WORKSPACE" 
                          FontSize="28" 
                          FontWeight="Bold" 
                          Foreground="#E0E1F1"
                          Margin="15,0"/>

                <Border Grid.Column="1"
                        Padding="15,8"
                        CornerRadius="20">
                    <Grid Margin="5,2.5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="1"
                                 x:Name="ClockText"
                                 FontWeight="Bold"
                                 FontSize="20"
                                 FontFamily="pack://application:,,,/Fonts/#ROGFonts-Regular"
                                 Foreground="#E0E1F1"/>
                    </Grid>
                </Border>
            </Grid>

            <!-- Stats Cards -->
            <Grid Grid.Row="1" Grid.RowSpan="2" Margin="10,0,10,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Deals Card -->
                <Border Grid.Column="0" 
                        Background="{StaticResource color2}"
                        CornerRadius="15"
                        Margin="0,0,10,0"
                        Padding="15">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Deals}" 
                                     FontSize="24" 
                                     FontWeight="Bold" 
                                     Foreground="White"/>
                        </StackPanel>
                        <TextBlock Text="Deals" 
                                 Foreground="White"/>
                    </StackPanel>
                </Border>

                <!-- Won Card -->
                <Border Grid.Column="1" 
                        Background="{StaticResource color5}"
                        CornerRadius="15"
                        Margin="5,0"
                        Padding="15">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Ticket}" 
                                     FontSize="24" 
                                     FontWeight="Bold" 
                                     Foreground="White"/>
                        </StackPanel>
                        <TextBlock Text="Tickets booked" 
                                 Foreground="White"/>
                    </StackPanel>
                </Border>

                <!-- Lost Card -->
                <Border Grid.Column="2" 
                        Background="{StaticResource color8}"
                        CornerRadius="15"
                        Margin="10,0,0,0"
                        Padding="15">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Revenue}" 
                                     FontSize="24" 
                                     FontWeight="Bold" 
                                     Foreground="White"/>
                            <TextBlock Text="VND" 
                                     Foreground="White"
                                     FontWeight="Medium"
                                     Margin="4,4,0,0"/>
                        </StackPanel>
                        <TextBlock Text="Revenue" 
                                 Foreground="White"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Business Censorship Section -->
            <Grid Grid.Row="3"
                  Margin="10,0,10,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Business Review" 
                                 FontSize="20" 
                                 FontWeight="Bold" 
                                 Foreground="White"/>
                    </StackPanel>

                    <Button x:Name="btnSeeMoreBus"
                            Grid.Column="1" 
                            Click="btnSeeMoreBus_Click"
                            Background="Transparent" 
                            BorderThickness="0"
                            Content="SEE MORE"
                            Command="{Binding ShowCensorViewCommand}"
                            Margin="0,0,10,0"
                            Foreground="White"
                            FontWeight="Bold"
                            Style="{StaticResource TextButton}"
                            OverridesDefaultStyle="True"/>

                </Grid>

                <!-- No Data Message -->
                <TextBlock Grid.Row="1" 
                          Text="Không có yêu cầu" 
                          FontSize="16"
                          Foreground="White"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Top"
                          Visibility="{Binding HasItems, Converter={StaticResource InverseBoolToVisibilityConverter}}" 
                          Margin="0,40,0,0"/>

                <!-- Business Cards -->
                <ItemsControl Grid.Row="1" 
                            ItemsSource="{Binding BusinessItems}"
                            Visibility="{Binding HasItems, Converter={StaticResource BoolToVisibilityConverter}}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="3"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#1B1464" 
                                    CornerRadius="15" 
                                    Margin="5" 
                                    Padding="10">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <!-- Nội dung chính -->
                                        <RowDefinition Height="Auto"/>
                                        <!-- Nút ở dưới -->
                                    </Grid.RowDefinitions>

                                    <StackPanel Grid.Row="0">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="{Binding Name}" 
                                                       FontWeight="Bold" 
                                                       FontSize="19"
                                                       Foreground="White"/>
                                            <Border Grid.Column="1" 
                                                    Background="{Binding Status, Converter={StaticResource StatusToColorConverter}}"
                                                    CornerRadius="5"
                                                    Padding="8,4"
                                                    Margin="0,0,0,5">
                                                <TextBlock Text="{Binding StatusText}"
                                                           Foreground="White"
                                                           FontSize="12"
                                                           FontWeight="SemiBold"/>
                                            </Border>
                                        </Grid>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Email: "
                                                       Foreground="#B8B9CF"
                                                       FontSize="15"
                                                       Margin="0 5 0 0"/>
                                            <TextBlock Text="{Binding Email}" 
                                                       Foreground="#B8B9CF" 
                                                       FontSize="15"
                                                       TextWrapping="Wrap" 
                                                       Margin="0,5,10,10"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Phone: "
                                                       Foreground="#B8B9CF"
                                                       FontSize="15"/>
                                            <TextBlock Text="{Binding PhoneNumber}"
                                                       Foreground="#B8B9CF"
                                                       FontSize="15"
                                                       Margin="0,0,10,15"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- Action Buttons -->
                                    <StackPanel Grid.Row="1" Orientation="Horizontal" 
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Bottom"
                                                Margin="0,10,0,0"
                                                Visibility="{Binding IsActionRequired, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <Button Content="Accept"
                                                FontSize="15"
                                                Command="{Binding DataContext.AcceptCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                CommandParameter="{Binding}"
                                                Background="{StaticResource color5}"
                                                Foreground="White"
                                                Width="90"
                                                Height="35"
                                                Margin="0,0,10,0"
                                                Cursor="Hand"
                                                Style="{StaticResource RoundedButton}"/>
                                        <Button Content="Reject"
                                                FontSize="15"
                                                Command="{Binding DataContext.RejectCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                CommandParameter="{Binding}"
                                                Background="{StaticResource color4}"
                                                Foreground="White"
                                                Width="90"
                                                Height="35"
                                                Cursor="Hand"
                                                Style="{StaticResource RoundedButton}"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>

                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>

            <!-- Vehicle Inspection Section -->
            <Grid Grid.Row="4"
      Margin="10,0,10,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Vehicle Review" 
                      FontSize="20" 
                      FontWeight="Bold" 
                      Foreground="White"/>
                    </StackPanel>

                    <Button x:Name="btnSeeMoreVehicle"
                            Grid.Column="1" 
                            Click="btnSeeMoreVehicle_Click"
                            Background="Transparent" 
                            BorderThickness="0"
                            Content="SEE MORE"
                            Command="{Binding ShowCensorViewCommand}"
                            Margin="0,0,10,0"
                            Foreground="White"
                            FontWeight="Bold"
                            Style="{StaticResource TextButton}"
                            OverridesDefaultStyle="True"/>
                </Grid>

                <!-- No Data Message -->
                <TextBlock Grid.Row="1" 
              Text="Không có yêu cầu" 
              FontSize="16"
              Foreground="White"
              HorizontalAlignment="Center"
              VerticalAlignment="Top"
              Visibility="{Binding HasVehicleItems, Converter={StaticResource InverseBoolToVisibilityConverter}}" 
              Margin="0,40,0,0"/>

                <!-- Vehicle Cards -->
                <!-- Vehicle Cards -->
                <ItemsControl Grid.Row="1" 
            ItemsSource="{Binding VehicleItems}"
            Visibility="{Binding HasVehicleItems, Converter={StaticResource BoolToVisibilityConverter}}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="3"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#1B1464" 
                    CornerRadius="15" 
                    Margin="5" 
                    Padding="10">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Header với ảnh, biển số và số ghế -->
                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Image -->
                                        <Image Grid.Column="0"
                               Width="50" 
                               Height="50" 
                               Margin="0,0,10,0"
                               Source="{Binding VehicleImage}"/>

                                        <!-- License Plate and Seats -->
                                        <StackPanel Grid.Column="1" 
                                  Orientation="Vertical"
                                  VerticalAlignment="Center">
                                            <TextBlock Text="{Binding LicensePlate}" 
                                     FontWeight="Bold" 
                                     FontSize="19"
                                     Foreground="White"/>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Seats: "
                                         Foreground="#B8B9CF"
                                         FontSize="15"/>
                                                <TextBlock Text="{Binding Seats}"
                                         Style="{StaticResource EllipsisTextBlockStyle}"
                                         Foreground="#B8B9CF"
                                         FontSize="15"
                                         MouseEnter="TextBlock_MouseEnter"
                                         MouseLeave="TextBlock_MouseLeave"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <!-- Status -->
                                        <Border Grid.Column="2" 
                                Background="{Binding Status, Converter={StaticResource StatusToColorConverter}}"
                                CornerRadius="5"
                                Padding="8 4"
                                Height="25"
                                VerticalAlignment="Top">
                                            <TextBlock Text="{Binding StatusText}"
                                     Foreground="White"
                                     FontSize="12"
                                     FontWeight="SemiBold"/>
                                        </Border>
                                    </Grid>

                                    <!-- Thông tin xe chia 2 cột -->
                                    <Grid Grid.Row="1" Margin="0,10,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Cột trái -->
                                        <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Vehicle Type: "
                                         Foreground="#B8B9CF"
                                         FontSize="15"/>
                                                <TextBlock Text="{Binding VehicleType}" 
                                         Style="{StaticResource EllipsisTextBlockStyle}"
                                         Foreground="#B8B9CF"
                                         FontSize="15"
                                         MouseEnter="TextBlock_MouseEnter"
                                         MouseLeave="TextBlock_MouseLeave"/>
                                            </StackPanel>

                                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                                <TextBlock Text="Seat Type: "
                                         Foreground="#B8B9CF"
                                         FontSize="15"/>
                                                <TextBlock Text="{Binding SeatType}"
                                         Style="{StaticResource EllipsisTextBlockStyle}"
                                         Foreground="#B8B9CF"
                                         FontSize="15"
                                         MouseEnter="TextBlock_MouseEnter"
                                         MouseLeave="TextBlock_MouseLeave"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <!-- Cột phải -->
                                        <StackPanel Grid.Column="1" Margin="5,0,0,0">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Rules: "
                                         Foreground="#B8B9CF"
                                         FontSize="15"/>
                                                <TextBlock Text="{Binding Rules}"
                                         Style="{StaticResource EllipsisTextBlockStyle}"
                                         Foreground="#B8B9CF"
                                         FontSize="15"
                                         MouseEnter="TextBlock_MouseEnter"
                                         MouseLeave="TextBlock_MouseLeave"/>
                                            </StackPanel>

                                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                                <TextBlock Text="Amenities: "
                                         Foreground="#B8B9CF"
                                         FontSize="15"/>
                                                <TextBlock Text="{Binding Amenities}"
                                                          Style="{StaticResource EllipsisTextBlockStyle}"
                                                          Foreground="#B8B9CF"
                                                          FontSize="15"
                                                          MouseEnter="TextBlock_MouseEnter"
                                                          MouseLeave="TextBlock_MouseLeave"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Grid>

                                    <!-- Nút Accept/Reject -->
                                    <StackPanel Grid.Row="2" 
                                                Orientation="Horizontal" 
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Bottom"
                                                Margin="0,10,0,0"
                                                Visibility="{Binding IsActionRequired, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <Button Content="Accept"
                                                FontSize="15"
                                                Command="{Binding DataContext.AcceptVehicleCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                CommandParameter="{Binding}"
                                                Background="{StaticResource color5}"
                                                Foreground="White"
                                                Width="90"
                                                Height="35"
                                                Margin="0,0,10,0"
                                                Cursor="Hand"
                                                Style="{StaticResource RoundedButton}"/>
                                        <Button Content="Reject"
                                                FontSize="15"
                                                Command="{Binding DataContext.RejectVehicleCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                CommandParameter="{Binding}"
                                                Background="{StaticResource color4}"
                                                Foreground="White"
                                                Width="90"
                                                Height="35"
                                                Cursor="Hand"
                                                Style="{StaticResource RoundedButton}"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Grid>
    </Border>
</UserControl>
