<UserControl x:Class="TiketManagementV2.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TiketManagementV2.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Grid.Column="1"
                        Grid.RowSpan="2"
                        Background="#200F53"
                        CornerRadius="15">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="5,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="WORKSPACE" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Foreground="#E0E1F1"
                            Margin="15,0"/>

                <Border Grid.Column="1"
                                    Padding="15,8"
                                    CornerRadius="20">
                    <Grid Margin="5,2.5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="1"
                                             x:Name="ClockText"
                                             FontWeight="Bold"
                                             FontSize="20"
                                             FontFamily="pack://application:,,,/Fonts/#ROGFonts-Regular"
                                             Foreground="#E0E1F1"/>
                    </Grid>
                </Border>
            </Grid>

            <!-- Stats Cards -->
            <Grid Grid.Row="1" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Deals Card -->
                <Border Grid.Column="0" 
                                    Background="{StaticResource color2}"
                                    CornerRadius="15"
                                    Margin="0,0,10,0"
                                    Padding="15">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Deals}" 
                                       FontSize="24" 
                                       FontWeight="Bold" 
                                       Foreground="White"/>
                        </StackPanel>
                        <TextBlock Text="Deals" 
                                   Foreground="White"/>
                    </StackPanel>
                </Border>

                <!-- Won Card -->
                <Border Grid.Column="1" 
                        Background="{StaticResource color5}"
                        CornerRadius="15"
                        Margin="5,0"
                        Padding="15">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="20" 
                                       FontSize="24" 
                                       FontWeight="Bold" 
                                       Foreground="White"/>
                        </StackPanel>
                        <TextBlock Text="Tickets booked" 
                                                Foreground="White"/>
                    </StackPanel>
                </Border>

                <!-- Lost Card -->
                <Border Grid.Column="2" 
                                    Background="{StaticResource color8}"
                                    CornerRadius="15"
                                    Margin="10,0,0,0"
                                    Padding="15">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Revenue}" 
                                       FontSize="24" 
                                       FontWeight="Bold" 
                                       Foreground="White"/>
                            <TextBlock Text="VND" 
                                       Foreground="White"
                                       FontWeight="Medium"
                                       Margin="4,4,0,0"/>
                        </StackPanel>
                        <TextBlock Text="Revenue" 
                                                Foreground="White"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- New Leads Section -->
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Business Censorship" 
                                                FontSize="20" 
                                                FontWeight="Bold" 
                                                Foreground="White"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" 
                                Orientation="Horizontal">
                        
                    </StackPanel>
                </Grid>

                <!-- Leads Cards -->
                <ItemsControl Grid.Row="1">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="4"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#2A2A2A" 
                                    CornerRadius="15" 
                                    Margin="5" 
                                     Padding="15">
                                <StackPanel>
                                    <Grid Margin="0,0,0,10">
                                        <Ellipse Width="40" 
                                                             Height="40" 
                                                             Fill="#444444"/>
                                        <Path Data="M17 3a2.828 2.828 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5L17 3z" 
                                                          Fill="White" 
                                                          Width="16" 
                                                          Height="16"
                                                          HorizontalAlignment="Right"/>
                                    </Grid>
                                    <TextBlock Text="{Binding Name}" 
                                                             FontWeight="Bold" 
                                                             Foreground="White"/>
                                    <TextBlock Text="{Binding Role}" 
                                                             Foreground="#8B8B8B" 
                                                             TextWrapping="Wrap" 
                                                             Margin="0,5,0,10"/>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="Email" 
                                                            Background="#444444" 
                                                            Foreground="White" 
                                                            Padding="15,5" 
                                                            Margin="0,0,5,0"/>
                                        <Button Content="Call" 
                                                            Background="#444444" 
                                                            Foreground="White" 
                                                            Padding="15,5"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>

            <Grid Grid.Row="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="vehicle inspection" 
                                                FontSize="20" 
                                                FontWeight="Bold" 
                                                Foreground="White"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" 
                                Orientation="Horizontal">

                    </StackPanel>
                </Grid>

                <!-- Leads Cards -->
                <ItemsControl Grid.Row="1">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="4"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#2A2A2A" 
                                    CornerRadius="15" 
                                    Margin="5" 
                                     Padding="15">
                                <StackPanel>
                                    <Grid Margin="0,0,0,10">
                                        <Ellipse Width="40" 
                                                             Height="40" 
                                                             Fill="#444444"/>
                                        <Path Data="M17 3a2.828 2.828 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5L17 3z" 
                                                          Fill="White" 
                                                          Width="16" 
                                                          Height="16"
                                                          HorizontalAlignment="Right"/>
                                    </Grid>
                                    <TextBlock Text="{Binding Name}" 
                                                             FontWeight="Bold" 
                                                             Foreground="White"/>
                                    <TextBlock Text="{Binding Role}" 
                                                             Foreground="#8B8B8B" 
                                                             TextWrapping="Wrap" 
                                                             Margin="0,5,0,10"/>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="Email" 
                                                            Background="#444444" 
                                                            Foreground="White" 
                                                            Padding="15,5" 
                                                            Margin="0,0,5,0"/>
                                        <Button Content="Call" 
                                                            Background="#444444" 
                                                            Foreground="White" 
                                                            Padding="15,5"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Grid>
    </Border>
</UserControl>
