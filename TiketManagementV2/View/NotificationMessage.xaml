<Window x:Class="TiketManagementV2.View.NotificationMessage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TiketManagementV2.View"
        mc:Ignorable="d"
        Title="NotificationMessage" MinHeight="70" MaxHeight="150" Width="300"
        Icon="/Images/TANK_logo_rmbg.ico"
        SizeToContent="Height"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        WindowStyle="None"
        Loaded="Window_Loaded">
    <Window.Resources>
        <Storyboard x:Key="CloseButtonFadeInAnimation" >
            <DoubleAnimation
                AutoReverse="False"
                FillBehavior="HoldEnd"
                Storyboard.TargetName="_Close"
                Storyboard.TargetProperty="Opacity"
                From="0"
                To="1"
                Duration="0:0:0.3"
                />
        </Storyboard>


        <Storyboard x:Key="CloseButtonFadeOutAnimation" >
            <DoubleAnimation
                AutoReverse="False"
                FillBehavior="HoldEnd"
                Storyboard.TargetName="_Close"
                Storyboard.TargetProperty="Opacity"
                From="1"
                To="0"
                Duration="0:0:0.3"
                />
        </Storyboard>


        <Storyboard x:Key="WindowSlideInAnimation" Completed="WindowSlideInAnimation_Completed">
            <ThicknessAnimation
                Storyboard.TargetName="_Border"
                Storyboard.TargetProperty="Margin"
                From="300 0 0 0"
                To="0 0 0 0"
                Duration="0:0:0.5"
                ></ThicknessAnimation>
        </Storyboard>


        <Storyboard x:Key="WindowSlideOutAnimation" Completed="WindowSlideOutAnimation_Completed">
            <ThicknessAnimation
              Storyboard.TargetName="_Border"
              Storyboard.TargetProperty="Margin"
              From="0 0 0 0"
              To="300 0 0 0"
              Duration="0:0:0.5"
              ></ThicknessAnimation>
        </Storyboard>


        <Storyboard x:Key="RectangleWidthDecreaseAnimation" Completed="Storyboard_Completed">
            <DoubleAnimation
                AutoReverse="False"
                FillBehavior="HoldEnd"
                Storyboard.TargetName="_Rectangle"
                Storyboard.TargetProperty="Width"
                From="300"
                To="0"
                Duration="0:0:6"
                />
        </Storyboard>


    </Window.Resources>

    <Border
        x:Name="_Border"
        d:Background="{StaticResource RedGradient}"
        Background="{Binding Gradient}"
        CornerRadius="5">
        <StackPanel VerticalAlignment="Bottom">
            <Grid Margin="0,0,0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <!-- For first image -->
                    <ColumnDefinition Width="180"/>
                    <!-- For text -->
                    <ColumnDefinition Width="*"/>
                    <!-- For spacing -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- For close button -->
                </Grid.ColumnDefinitions>

                <Image Grid.Column="0"
                       Width="30"
                       Height="30"
                       Margin="20,0"
                       Source="{Binding ImagePath}"
                       d:Source="/Images/Error_Icon.png"
                       Stretch="Fill" />

                <StackPanel Grid.Column="1" 
                            Margin="0,3,0,0">
                    <TextBlock
                                FontFamily="#Poppins"
                                FontSize="22"
                                FontWeight="Medium"
                                Foreground="#F4F4F4"
                                d:Text="Error !"
                                Text="{Binding Header}"
                                TextWrapping="Wrap"
                                MaxWidth="180" />
                                            <TextBlock
                                FontFamily="#Poppins"
                                FontSize="11"
                                FontWeight="Light"
                                Foreground="#F4F4F4"
                                Margin="0,5,0,0"
                                d:Text="An Unexpected Problem has occured."
                                Text="{Binding Message}"
                                TextWrapping="Wrap"
                                MaxWidth="180" />
                </StackPanel>

                <Image x:Name="_Close"
                       Grid.Column="3"
                       Width="30"
                       Height="30"
                       Margin="0,0,10,0"
                       VerticalAlignment="Center"
                       Cursor="Hand"
                       Source="/Images/Close_Icon.png"
                       Stretch="Fill"
                       MouseDown="_Close_MouseDown"
                       Opacity="0"/>
            </Grid>
            <Rectangle
                x:Name="_Rectangle"
                Width="300"
                Height="4"
                HorizontalAlignment="Left"
                d:Fill="#F24A50"
                Fill="{Binding RecFill}"
                />
        </StackPanel>
    </Border>
</Window>
