<UserControl x:Class="TiketManagementV2.View.ChartView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:local="clr-namespace:TiketManagementV2.View"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">

    <Border Background="#200F53"
            CornerRadius="15">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="25,20,25,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="RECRUITMENT DASHBOARD" 
                          FontSize="28" 
                          FontWeight="Bold" 
                          Foreground="#E0E1F1"/>

                <Border Grid.Column="1"
                        Padding="15,8"
                        CornerRadius="20">
                    <Grid Margin="5,2.5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="1"
                                 x:Name="ClockText"
                                 FontWeight="Bold"
                                 FontSize="20"
                                 FontFamily="pack://application:,,,/Fonts/#ROGFonts-Regular"
                                 Foreground="#E0E1F1"/>
                    </Grid>
                </Border>
            </Grid>

            <!-- Hiring Stats Cards Row -->
            <Grid Grid.Row="1" Margin="25,10,25,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Technical Hiring Stats -->
                <Border Grid.Column="0" 
                        Background="#1B1464"
                        CornerRadius="15"
                        Margin="0,0,10,0"
                        Padding="15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="18" 
                                  FontSize="28" 
                                  FontWeight="Bold" 
                                  Foreground="White"
                                  HorizontalAlignment="Left"/>

                        <TextBlock Grid.Row="1" 
                                  Text="Technical Hiring" 
                                  Foreground="#6A75CA"
                                  FontSize="14"
                                  Margin="0,5,0,0"/>

                        <TextBlock Grid.Row="2" 
                                  Text="Average Days to Hire" 
                                  Foreground="White"
                                  FontSize="14"
                                  Margin="0,5,0,0"/>

                        <fa:IconImage Grid.RowSpan="3"
                                    Icon="ArrowRight" 
                                    Width="16" 
                                    Height="16"
                                    Foreground="White"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <!-- Non-Technical Hiring Stats -->
                <Border Grid.Column="1" 
                        Background="#1B1464"
                        CornerRadius="15"
                        Margin="5,0"
                        Padding="15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="23" 
                                  FontSize="28" 
                                  FontWeight="Bold" 
                                  Foreground="White"
                                  HorizontalAlignment="Left"/>

                        <TextBlock Grid.Row="1" 
                                  Text="Non-Technical Hiring" 
                                  Foreground="#C76584"
                                  FontSize="14"
                                  Margin="0,5,0,0"/>

                        <TextBlock Grid.Row="2" 
                                  Text="Average Days to Hire" 
                                  Foreground="White"
                                  FontSize="14"
                                  Margin="0,5,0,0"/>

                        <fa:IconImage Grid.RowSpan="3"
                                    Icon="ArrowRight" 
                                    Width="16" 
                                    Height="16"
                                    Foreground="White"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <!-- Technical Hiring Time to Fill -->
                <Border Grid.Column="2" 
                        Background="#1B1464"
                        CornerRadius="15"
                        Margin="5,0"
                        Padding="15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="54" 
                                  FontSize="28" 
                                  FontWeight="Bold" 
                                  Foreground="White"
                                  HorizontalAlignment="Left"/>

                        <TextBlock Grid.Row="1" 
                                  Text="Technical Hiring" 
                                  Foreground="#6A75CA"
                                  FontSize="14"
                                  Margin="0,5,0,0"/>

                        <TextBlock Grid.Row="2" 
                                  Text="Average Days to Fill" 
                                  Foreground="White"
                                  FontSize="14"
                                  Margin="0,5,0,0"/>

                        <fa:IconImage Grid.RowSpan="3"
                                    Icon="ArrowRight" 
                                    Width="16" 
                                    Height="16"
                                    Foreground="White"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <!-- Non-Technical Hiring Time to Fill -->
                <Border Grid.Column="3" 
                        Background="#1B1464"
                        CornerRadius="15"
                        Margin="5,0"
                        Padding="15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="27" 
                                  FontSize="28" 
                                  FontWeight="Bold" 
                                  Foreground="White"
                                  HorizontalAlignment="Left"/>

                        <TextBlock Grid.Row="1" 
                                  Text="Non-Technical Hiring" 
                                  Foreground="#C76584"
                                  FontSize="14"
                                  Margin="0,5,0,0"/>

                        <TextBlock Grid.Row="2" 
                                  Text="Average Days to Fill" 
                                  Foreground="White"
                                  FontSize="14"
                                  Margin="0,5,0,0"/>

                        <fa:IconImage Grid.RowSpan="3"
                                    Icon="ArrowRight" 
                                    Width="16" 
                                    Height="16"
                                    Foreground="White"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <!-- Technical Acceptance Rate -->
                <Border Grid.Column="4" 
                        Background="#1B1464"
                        CornerRadius="15"
                        Margin="5,0"
                        Padding="15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="98" 
                                  FontSize="28" 
                                  FontWeight="Bold" 
                                  Foreground="White"
                                  HorizontalAlignment="Left"/>

                        <TextBlock Grid.Row="1" 
                                  Text="Technical Hiring" 
                                  Foreground="#6A75CA"
                                  FontSize="14"
                                  Margin="0,5,0,0"/>

                        <TextBlock Grid.Row="2" 
                                  Text="Offer Acceptance Rate" 
                                  Foreground="White"
                                  FontSize="14"
                                  Margin="0,5,0,0"/>

                        <fa:IconImage Grid.RowSpan="3"
                                    Icon="ArrowRight" 
                                    Width="16" 
                                    Height="16"
                                    Foreground="White"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <!-- Non-Technical Acceptance Rate -->
                <Border Grid.Column="5" 
                        Background="#1B1464"
                        CornerRadius="15"
                        Margin="10,0,0,0"
                        Padding="15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="99" 
                                  FontSize="28" 
                                  FontWeight="Bold" 
                                  Foreground="White"
                                  HorizontalAlignment="Left"/>

                        <TextBlock Grid.Row="1" 
                                  Text="Non-Technical Hiring" 
                                  Foreground="#C76584"
                                  FontSize="14"
                                  Margin="0,5,0,0"/>

                        <TextBlock Grid.Row="2" 
                                  Text="Offer Acceptance Rate" 
                                  Foreground="White"
                                  FontSize="14"
                                  Margin="0,5,0,0"/>

                        <fa:IconImage Grid.RowSpan="3"
                                    Icon="ArrowRight" 
                                    Width="16" 
                                    Height="16"
                                    Foreground="White"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"/>
                    </Grid>
                </Border>
            </Grid>

            <!-- Charts Row -->
            <Grid Grid.Row="2" Margin="25,10,25,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Hiring Sources Chart -->
                <Border Grid.Column="0" 
                       Background="#1B1464"
                       CornerRadius="15"
                       Margin="0,0,10,0"
                       Padding="15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Top Hiring Sources" 
                                      FontSize="18" 
                                      FontWeight="Bold" 
                                      Foreground="White"
                                      Margin="0,0,0,10"/>

                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Border Background="#333C83" 
                                       CornerRadius="3" 
                                       Padding="8,2" 
                                       Margin="0,0,10,0">
                                    <StackPanel Orientation="Horizontal">
                                        <Border Width="10" 
                                               Height="10" 
                                               Background="#5E73EE" 
                                               CornerRadius="2" 
                                               Margin="0,0,5,0"/>
                                        <TextBlock Text="Doanh thu" 
                                                  Foreground="White" 
                                                  FontSize="12"/>
                                    </StackPanel>
                                </Border>

                                <fa:IconImage Icon="EllipsisVertical" 
                                            Width="16" 
                                            Height="16"
                                            Foreground="White"/>
                            </StackPanel>
                        </Grid>

                        <lvc:CartesianChart Grid.Row="1" 
                                          DisableAnimations="False"
                                          Hoverable="True">
                            <lvc:CartesianChart.Series>
                                <lvc:LineSeries Values="{Binding HiringSources}" 
                                              StrokeThickness="3"
                                              Stroke="#5E73EE"
                                              Fill="#3A4298"
                                              LineSmoothness="0.5"
                                              PointGeometrySize="0"/>
                            </lvc:CartesianChart.Series>
                            <lvc:CartesianChart.AxisX>
                                <lvc:Axis Labels="{Binding SourceLabels}" 
                                        Foreground="White" 
                                        FontSize="12">
                                    <lvc:Axis.Separator>
                                        <lvc:Separator StrokeThickness="0.2" 
                                                     Stroke="#454B80" 
                                                     Step="1"/>
                                    </lvc:Axis.Separator>
                                </lvc:Axis>
                            </lvc:CartesianChart.AxisX>
                            <lvc:CartesianChart.AxisY>
                                <lvc:Axis Foreground="White" 
                                        FontSize="12" 
                                        MinValue="0" 
                                        MaxValue="100">
                                    <lvc:Axis.Separator>
                                        <lvc:Separator StrokeThickness="0.2" 
                                                     Stroke="#454B80" 
                                                     Step="20"/>
                                    </lvc:Axis.Separator>
                                </lvc:Axis>
                            </lvc:CartesianChart.AxisY>
                        </lvc:CartesianChart>
                    </Grid>
                </Border>

                <!-- Recruitment Costs Chart -->
                <Border Grid.Column="1" 
                       Background="#1B1464"
                       CornerRadius="15"
                       Margin="10,0,0,0"
                       Padding="15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Recruitment Costs YTD" 
                                      FontSize="18" 
                                      FontWeight="Bold" 
                                      Foreground="White"
                                      Margin="0,0,0,10"/>

                            <fa:IconImage Grid.Column="1" 
                                        Icon="EllipsisVertical" 
                                        Width="16" 
                                        Height="16"
                                        Foreground="White"/>
                        </Grid>

                        <lvc:CartesianChart Grid.Row="1" 
                                          DisableAnimations="False"
                                          Hoverable="True">
                            <lvc:CartesianChart.Series>
                                <lvc:ColumnSeries Title="Marketing" 
                                                Values="{Binding MarketingCosts}" 
                                                Fill="#5E73EE"
                                                ColumnPadding="5"/>
                                <lvc:ColumnSeries Title="Sales" 
                                                Values="{Binding SalesCosts}" 
                                                Fill="#2D3250"
                                                ColumnPadding="5"/>
                            </lvc:CartesianChart.Series>
                            <lvc:CartesianChart.AxisX>
                                <lvc:Axis Labels="{Binding Months}" 
                                        Foreground="White" 
                                        FontSize="12">
                                    <lvc:Axis.Separator>
                                        <lvc:Separator StrokeThickness="0.2" 
                                                     Stroke="#454B80" 
                                                     Step="1"/>
                                    </lvc:Axis.Separator>
                                </lvc:Axis>
                            </lvc:CartesianChart.AxisX>
                            <lvc:CartesianChart.AxisY>
                                <lvc:Axis Foreground="White" 
                                        FontSize="12" 
                                        MinValue="0" 
                                        MaxValue="30">
                                    <lvc:Axis.Separator>
                                        <lvc:Separator StrokeThickness="0.2" 
                                                     Stroke="#454B80" 
                                                     Step="5"/>
                                    </lvc:Axis.Separator>
                                </lvc:Axis>
                            </lvc:CartesianChart.AxisY>
                        </lvc:CartesianChart>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Border>
</UserControl>